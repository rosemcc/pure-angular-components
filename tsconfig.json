{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@angular/*": [
        "node_modules/@angular/*"
      ],
      "uoa-controls": ["dist/uoa-controls"],
      "uoa-controls/*": ["dist/uoa-controls/*"],
      "auth": ["dist/auth/auth", "dist/auth"],
      "uoa-error-pages-angular": ["dist/error-pages/error-pages", "dist/error-pages"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
